<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal"
          xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints halignment="CENTER"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="30.0" prefHeight="50.0"/>
        <RowConstraints minHeight="30.0" prefHeight="10.0"/>
        <RowConstraints minHeight="30.0" prefHeight="10.0"/>
        <RowConstraints minHeight="30.0" prefHeight="10.0"/>
        <RowConstraints minHeight="30.0" prefHeight="10.0"/>
    </rowConstraints>

    <Text stroke="BLACK" text="MINESWEEPER" GridPane.rowIndex="0" textAlignment="CENTER">
        <font>
            <Font name="Myanmar Text Bold" size="32.0"/>
        </font>
    </Text>

    <Button text="START" GridPane.rowIndex="1" textAlignment="CENTER" onAction="#start">
        <font>
            <Font name="Rubik-Bold" size="16.0"/>
        </font>
    </Button>

    <Button fx:id="text2" text="HOW TO PLAY" GridPane.rowIndex="2" textAlignment="CENTER" onAction="#howToPlay">
        <font>
            <Font name="Rubik-Bold" size="16.0"/>
        </font>
    </Button>

    <Button text="HIGHSCORES" GridPane.rowIndex="3" onAction="#highscores">
        <font>
            <Font name="Rubik-Bold" size="16.0"/>
        </font>
    </Button>

    <Button text="EXIT" GridPane.rowIndex="4" onAction="#exit">
        <font>
            <Font name="Rubik-Bold" size="16.0"/>
        </font>
    </Button>

</GridPane>