<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="30.0" prefHeight="50.0" />
        <RowConstraints minHeight="130.0" prefHeight="210.0" />
        <RowConstraints minHeight="30.0" prefHeight="10.0" />
    </rowConstraints>

    <Text text="Select difficulty level:" GridPane.rowIndex="0">
        <font>
            <Font name="Rubik-Bold" size="24.0" />
        </font>
    </Text>
    <GridPane GridPane.rowIndex="1" alignment="CENTER" hgap="10" vgap="20">

        <Button fx:id="beginner" onAction="#newGame" text="BEGINNER" textAlignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="0">
            <font>
                <Font name="Rubik-Bold" size="16.0" />
            </font>
        </Button>

        <Button onAction="#newGame" text="INTERMEDIATE" textAlignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="0">
            <font>
                <Font name="Rubik-Bold" size="16.0" />
            </font>
        </Button>

        <Button onAction="#newGame" text="EXPERT" GridPane.rowIndex="2" GridPane.columnIndex="0">
            <font>
                <Font name="Rubik-Bold" size="16.0" />
            </font>
        </Button>

        <Text text="field: 9x9, mines: 10" textAlignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="1">
                <font>
                    <Font name="Rubik-Bold" size="16.0" />
                </font>
        </Text>

            <Text text="field: 16x16, mines: 40" textAlignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="1">
                    <font>
                        <Font name="Rubik-Bold" size="16.0" />
                    </font>
            </Text>

            <Text text="field: 16x30, mines: 99" GridPane.rowIndex="2" GridPane.columnIndex="1">
                <font>
                    <Font name="Rubik-Bold" size="16.0" />
                </font>
            </Text>

      <columnConstraints>
         <ColumnConstraints minWidth="100.0" prefWidth="200.0" />
         <ColumnConstraints minWidth="100.0" prefWidth="200.0" />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints minHeight="10.0" prefHeight="30.0" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" />
         <RowConstraints />
      </rowConstraints>

      </GridPane>

    <Button cancelButton="true" onAction="#back" text="BACK" GridPane.rowIndex="2">
        <font>
            <Font name="Rubik-Bold" size="16.0" />
        </font>
    </Button>

</GridPane>
