<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" vgap="10"
          xmlns="http://javafx.com/javafx/10.0.2-internal">
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" prefWidth="150.0"/>
        <ColumnConstraints halignment="CENTER" prefWidth="150.0"/>
        <ColumnConstraints halignment="CENTER" prefWidth="150.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="40.0"/>
        <RowConstraints prefHeight="1.0"/>
        <RowConstraints minHeight="50.0" prefHeight="60.0"/>
    </rowConstraints>

    <Text text="Do you wish to continue previous game or start a new?" GridPane.rowIndex="0" GridPane.columnIndex="1">
        <font>
            <Font name="Rubik-Bold" size="20.0"/>
        </font>
    </Text>

    <Text text="If you start a new game now, the save will be lost!" GridPane.rowIndex="1" GridPane.columnIndex="1">
        <font>
            <Font name="Rubik-Bold" size="12.0"/>
        </font>
    </Text>

    <Button onAction="#loadGame" text="CONTINUE" GridPane.rowIndex="2" GridPane.columnIndex="0">
        <font>
            <Font name="Rubik-Bold" size="16.0"/>
        </font>
    </Button>

    <Button onAction="#newGame" text="START NEW" GridPane.rowIndex="2" GridPane.columnIndex="1">
        <font>
            <Font name="Rubik-Bold" size="16.0"/>
        </font>
    </Button>

    <Button cancelButton="true" onAction="#cancel" text="CANCEL" GridPane.rowIndex="2" GridPane.columnIndex="2">
        <font>
            <Font name="Rubik-Bold" size="16.0"/>
        </font>
    </Button>

</GridPane>

