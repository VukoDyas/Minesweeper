<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" vgap="10"
          xmlns="http://javafx.com/javafx/10.0.2-internal">
    <columnConstraints>
        <ColumnConstraints halignment="CENTER"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="30.0" prefHeight="50.0"/>
        <RowConstraints minHeight="30.0" prefHeight="30.0"/>
        <RowConstraints minHeight="10.0" prefHeight="10.0"/>
        <RowConstraints minHeight="30.0" prefHeight="10.0"/>
        <RowConstraints minHeight="30.0" prefHeight="10.0"/>
        <RowConstraints minHeight="30.0" prefHeight="10.0"/>
    </rowConstraints>

    <Text stroke="BLACK" text="YOU WON!" GridPane.rowIndex="0" textAlignment="CENTER">
        <font>
            <Font name="Rubik-Bold" size="32.0"/>
        </font>
    </Text>

    <Text fx:id="timeText" text="Your time is unknown. Something went wrong." GridPane.rowIndex="1" textAlignment="CENTER">
        <font>
            <Font name="Rubik-Bold" size="16.0"/>
        </font>
    </Text>

    <Text  text="Write your name down below:" GridPane.rowIndex="2" textAlignment="CENTER">
        <font>
            <Font name="Rubik-Bold" size="12.0"/>
        </font>
    </Text>

    <TextField fx:id="nameField" promptText="your name . . ." GridPane.rowIndex="3">
        <font>
            <Font name="Rubik-Bold" size="16.0"/>
        </font>
    </TextField>

    <Button text="CONFIRM" GridPane.rowIndex="4" onAction="#confirm">
        <font>
            <Font name="Rubik-Bold" size="16.0"/>
        </font>
    </Button>

    <Text text="TIP: You can compare your score with previous attempts in ranking section." GridPane.rowIndex="5" textAlignment="CENTER">
        <font>
            <Font name="Rubik-Bold" size="12.0"/>
        </font>
    </Text>

</GridPane>
